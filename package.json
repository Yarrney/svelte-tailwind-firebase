{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "npm run build:tailwind && rollup -c",
    "start": "sirv public --single",
    "watch:tailwind": "postcss public/tailwind.css -o public/global.css -w",
    "build:tailwind": "NODE_ENV=production postcss public/tailwind.css -o public/global.css"
  },
  "dependencies": {
    "firebase": "^7.6.0",
    "sirv-cli": "^0.4.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@rollup/plugin-replace": "^2.2.1",
    "autoprefixer": "^9.7.3",
    "dotenv": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.24",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "precss": "^4.0.0",
    "rollup": "^1.27.12",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-dotenv": "^0.2.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.3",
    "svelte": "^3.16.4",
    "svelte-preprocess": "^3.2.6",
    "svelte-spa-router": "^2.0.0",
    "tailwindcss": "^1.1.4"
  }
}
